{% extends 'base.html.twig' %}

{% block title %}Restaurant
{% endblock %}

{% block body %}
	<h1>Restaurant</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ restaurant.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ restaurant.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ restaurant.description }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ restaurant.createdAt ? restaurant.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			{% if restaurant.averageRating is not null %}
				<tr>
					<td>NotÃ© en moyenne</td>
					<th>{{ restaurant.averageRating | round(1) }}/5</th>
				</tr>
			{% else %}
				<td>Pas encore de note</td>
			{% endif %}
		</tbody>
	</table>

	<h2>Avis</h2>
	<div class="album py-5 bg-light">
		<div class="container">
			<div class="row m-2">

				{% for review in restaurant.reviews  %}
					<div class="col-4 card shadow-sm">
						<div class="card-body d-flex">
							<div class="col-10">
								<p>{{ review.message }}</p>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</tr>


